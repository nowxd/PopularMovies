<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="org.nowxd.popularmovies.activity.MovieDetailActivity">

        <TextView
            android:id="@+id/tv_detail_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_placeholder"
            android:textSize="@dimen/movie_title_text_size"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/iv_detail_movie_poster"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_movie_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="@dimen/movie_poster_detail_height"
            android:layout_width="@dimen/movie_poster_detail_width"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_rating_star"
            android:layout_width="29dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/rating_star"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_movie_poster"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_rating"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_release_date"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_user_rating"
            android:text="@string/user_rating"
            android:textSize="@dimen/movie_detail_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_movie_poster" />

        <TextView
            android:id="@+id/tv_release_date"
            android:text="@string/release_date"
            android:textSize="@dimen/movie_detail_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_rating"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/tv_movie_plot"
            android:text="@string/movie_plot"
            android:textSize="@dimen/movie_detail_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:scrollbarStyle="outsideOverlay"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>

