<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_movie_detail"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="org.nowxd.popularmovies.activity.MovieDetailActivity">

        <!--Title-->
        <TextView
            android:id="@+id/tv_detail_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_placeholder"
            android:textSize="@dimen/movie_title_text_size"
            android:layout_margin="@dimen/detail_item_margin"/>

        <!--Add To Favorites Button-->
        <ImageView
            android:id="@+id/iv_add_to_favorites"
            android:layout_height="50dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/add_to_favorites"
            android:layout_toRightOf="@id/tv_detail_movie_title"
            android:layout_toEndOf="@id/tv_detail_movie_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_margin="@dimen/detail_item_margin"/>

        <!-- Movie Poster -->
        <ImageView
            android:id="@+id/iv_detail_movie_poster"
            android:layout_width="@dimen/movie_poster_detail_width"
            android:layout_height="@dimen/movie_poster_detail_height"
            android:contentDescription="@null"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_below="@id/tv_detail_movie_title"
            android:layout_margin="@dimen/detail_item_margin"/>

        <!--User Rating-->
        <TextView
            android:id="@+id/tv_user_rating"
            android:text="@string/user_rating"
            android:textSize="@dimen/movie_detail_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_detail_movie_poster"
            android:layout_margin="@dimen/detail_item_margin"
            />

        <!--Rating Star-->
        <!--<ImageView-->
            <!--android:id="@+id/iv_rating_star"-->
            <!--android:layout_width="25dp"-->
            <!--android:layout_height="25dp"-->
            <!--app:srcCompat="@drawable/rating_star"-->
            <!--android:layout_toRightOf="@id/tv_user_rating"-->
            <!--android:layout_toEndOf="@id/tv_user_rating"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignRight="@id/tv_user_rating"-->
            <!--android:layout_alignEnd="@id/tv_user_rating"-->
            <!--android:layout_below="@id/iv_detail_movie_poster"/>-->

        <TextView
            android:id="@+id/tv_release_date"
            android:text="@string/release_date"
            android:textSize="@dimen/movie_detail_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_rating"
            android:layout_margin="@dimen/detail_item_margin"
            />

        <TextView
            android:id="@+id/tv_movie_plot"
            android:text="@string/movie_plot"
            android:textSize="@dimen/movie_detail_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_release_date"
            android:layout_margin="@dimen/detail_item_margin"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_trailer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_plot"
            android:layout_margin="@dimen/detail_item_margin"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_review_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_trailer_list"
            android:layout_margin="@dimen/detail_item_margin"
            />

    </RelativeLayout>

</ScrollView>

