<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rv_detail_item_margin">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_view_corner_radius"
            card_view:cardElevation="@dimen/card_view_elevation"
            card_view:cardUseCompatPadding="true"
            >

            <ImageView
                android:id="@+id/iv_play_trailer"
                android:layout_width="@dimen/player_trailer_dimen"
                android:layout_height="@dimen/player_trailer_dimen"
                android:src="@drawable/play_video"
                android:contentDescription="@null"
                android:layout_marginRight="@dimen/detail_item_margin"
                android:layout_marginEnd="@dimen/detail_item_margin"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_trailer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_play_trailer"
                android:layout_toEndOf="@id/iv_play_trailer"
                android:textSize="@dimen/detail_list_item_text_size"
                android:padding="@dimen/trailer_name_padding"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>